<!-- views/authors.ejs -->

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Authors</title>
    <style>
        table {
            width: 100%;
            border-collapse: collapse;
            margin-top: 20px;
        }

        th, td {
            border: 1px solid #ddd;
            padding: 8px;
            text-align: left;
        }

        th {
            background-color: #f2f2f2;
        }
    </style>
</head>
<body>
<h1>Authors</h1>

<table>
    <thead>
    <tr>
        <th>ID</th>
        <th>Last Name</th>
        <th>First Name</th>
    </tr>
    </thead>
    <tbody>
    <% authors.forEach(author => { %>
        <tr>
            <td><%= author.id %></td>
            <td><%= author.last_name %></td>
            <td><%= author.first_name %></td>
        </tr>
    <% }); %>
    </tbody>
</table>
</body>
</html>
